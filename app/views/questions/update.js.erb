<% if @question.errors.present? %>
<% @question.errors.full_messages.each do |message| %>
$('.question-errors').html('<%= j message %>');
<% end %>
<% else %>
$('#question-title').text('<%= @question.title %>');
$('#question-body').text('<%= @question.body %>');
$('#question-attachments').html('<%= j render @question.attachments %>');

$('form#edit_question_<%= @question.id %>').hide();
<% end %>