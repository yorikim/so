<% if @answer.errors.present? %>
<% @answer.errors.full_messages.each do |message| %>
$('.answer-errors').html('<%= j message %>');
<% end %>
<% else %>
$('<%= "#answer-container-#{@answer.id}" %> .answer-content').text('<%= j @answer.body %>');
$('<%= "#answer-container-#{@answer.id}" %> .attachments').html('<%= j render @answer.attachments %>');
$('<%= "#edit_answer_#{@answer.id}" %>').hide();
<% end %>