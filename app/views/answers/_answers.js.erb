<% if @answer.errors.present? %>
<% @answer.errors.full_messages.each do |message| %>
$('.answer-errors').html('<%= j message %>');
<% end %>
<% else %>
$('#answers-count').text('<%= @question.answers.count %> answers');
$('.answers').html('<%= j render @question.best_answer %>');
$('.answers').append('<%= j render @question.answers_without_best %>');

$('.edit-answer-link').click(function (e) {
  e.preventDefault();
  $('#edit_answer_' + $(this).data('answerId')).show();
});
<% end %>